{
  "name": "@ibgrav/vite-react-ssr",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "node bin/dev.mjs",
    "prod": "node bin/prod.mjs",
    "build:watch": "pnpm build:server --watch",
    "build": "pnpm build:client && pnpm build:server",
    "build:client": "vite build",
    "build:server": "SSR=true vite build",
    "build:deno": "deno bundle src/edge/handler.tsx netlify/edge-functions/handler.js --import-map=import_map.json"
  },
  "dependencies": {
    "@harvard-hbs/webdev-design-system": "0.0.54",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sirv": "2.0.2"
  },
  "devDependencies": {
    "@netlify/functions": "^1.3.0",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "@vitejs/plugin-react": "2.2.0",
    "prettier": "2.7.1",
    "typescript": "4.9.3",
    "vite": "3.2.4"
  }
}
